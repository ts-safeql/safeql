{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "@ts-safeql/eslint-plugin"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@ts-safeql/check-sql": [
      "error",
      {
        "connections": [
          {
            "migrationsDir": "./prisma/migrations",
            "targets": [
              { "tag": "prisma.+($queryRaw|$executeRaw)", "transform": "{type}[]" }
            ]
          }
        ]
      }
    ]
  }
}
